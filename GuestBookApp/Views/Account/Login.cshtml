@model GuestBookApp.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Login as Guest</a>
    </form>
</div>