@model GuestBookApp.Models.ViewModels.RegisterViewModel

<form id="registerForm" asp-action="Register" method="post" data-url="@Url.Action("Register", "Account")">
    <div class="form-group">
        <input asp-for="Username" placeholder="Username" class="form-control" id="Register_Username" />
        <span asp-validation-for="Username" class="text-danger" data-valmsg-for="Username"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Password" class="form-control" id="Register_Password" />
        <span asp-validation-for="Password" class="text-danger" data-valmsg-for="Password"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" placeholder="Confirmation" class="form-control" id="Register_ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger" data-valmsg-for="ConfirmPassword"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
