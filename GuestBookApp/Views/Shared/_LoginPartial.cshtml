@model GuestBookApp.Models.ViewModels.LoginViewModel

<form id="loginForm" asp-action="Login" method="post" data-url="@Url.Action("Login", "Account")">
    <div class="form-group">
        <input asp-for="Username" placeholder="Username" class="form-control" id="Login_Username" />
        <span asp-validation-for="Username" class="text-danger" data-valmsg-for="Username"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" placeholder="Password" class="form-control" id="Login_Password" />
        <span asp-validation-for="Password" class="text-danger" data-valmsg-for="Password"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
